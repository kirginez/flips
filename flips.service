[Unit]
Description=Flips FastAPI Application
After=network.target

[Service]
Type=simple
# Пути будут автоматически заменены скриптом setup-service.sh
WorkingDirectory=/path/to/flips/backend
Environment="PATH=/path/to/flips/backend/.venv/bin"
ExecStart=/path/to/flips/backend/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
