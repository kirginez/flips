[Unit]
Description=Flips FastAPI Application
After=network.target

[Service]
Type=simple
User=kirginez
WorkingDirectory=/home/kirginez/My Scripts/flips/backend
Environment="PATH=/home/kirginez/.local/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/kirginez/.local/bin/uv run uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
